{
  "name": "ctrl-enter",
  "displayName": "ctrl-enter",
  "version": "0.1.0",
  "description": "'Enter'で送信するWebサイトを'Ctrl + Enter'に矯正するブラウザ拡張機能",
  "author": "mst-mkt",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "check": "biome check ./src/",
    "fix": "biome check --write ./src/",
    "test": "plasmo test",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.10.0",
    "@tabler/icons-react": "^3.13.0",
    "plasmo": "0.87.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "ts-pattern": "^5.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@types/chrome": "0.0.268",
    "@types/node": "20.14.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "^10.4.19",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "5.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": "biome check --write ./src/"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  }
}
